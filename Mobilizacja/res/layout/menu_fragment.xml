<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/get_data_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_getdata" />
    
    <Button
        android:id="@+id/list_view_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/menu_listview_example" />
    
    <Button
        android:id="@+id/list_view_anim_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/menu_listview_anim" />
    
    <Button
        android:id="@+id/clear_db_btn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/menu_clear_db" />
    

</LinearLayout>